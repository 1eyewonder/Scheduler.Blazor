<MudContainer Fixed="true">
    @foreach (var year in GetYears())
    {
        if (year.Year == SelectedDate.Year)
        {
            <MudButton OnClick="@(async () => await SetYear(year))"
                       Color="Color.Primary"
                       Variant="@Variant"
                       Class="rounded-0"
                       DisableElevation="true"
                       FullWidth="true">

                <MudText Typo="Typo.h5">
                    @year.Year
                </MudText>
            </MudButton>
        }
        else
        {
            <MudButton OnClick="@(async () => await SetYear(year))"
                       FullWidth="true"
                       Class="rounded-0"
                       DisableElevation="true">

                <MudText Typo="Typo.h6">
                    @year.Year
                </MudText>
            </MudButton>
        }
    }
</MudContainer>


@code {

    private async Task SetYear(DateTime year)
    {
        SelectedDate = year;
        await SelectedDateChanged.InvokeAsync(year);
        await OnYearSelect.InvokeAsync(year);
    }
}