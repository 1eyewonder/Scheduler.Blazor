@typeparam T
@inherits MudComponentBase

@{
    var myStyle = $"display: grid; grid-template-columns: repeat({DaysInWeek}, minmax(0, 1.25fr)); grid-template-rows: minmax(200px, 1fr);";

    <MudContainer Style="@($"{myStyle} {Style}")"
                  Class="@Class"
                  Tag="@Tag"
                  UserAttributes="@UserAttributes">
        @{
            for (var i = 0; i < DaysInWeek; i++)
            {
                var date = StartOfWeek.AddDays(i);
                <SchedulerDay T="T"
                              Date="date"
                              AppointmentVariant="@AppointmentVariant"
                              AppointmentSpan="@AppointmentSpan"
                              ScheduleView="@ScheduleView"
                              Appointments="@(Appointments .Where(x => date.Day == x.Start.Day || date.Day == x.End.Day) .ToList())"
                              AppointmentsChanged="@AppointmentsChanged"
                              DayStartTime="@AdjustTime(date, DayStartTime)"
                              DayEndTime="@AdjustTime(date, DayEndTime)"
                              OnAppointmentClick="@OnAppointmentClick"
                              OnDayClick="@OnDayClick">
                </SchedulerDay>
            }
        }
    </MudContainer>
}