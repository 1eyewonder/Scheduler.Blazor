@typeparam T

<MudDialog>
    <DialogContent>

        <MudTextField T="string"
                      Label="Appointment Name"
                      @bind-Text="Appointment.Title" />

        <MudDatePicker Label="Appointment Date"
                       Date="Appointment.Start"
                       DateChanged="UpdateDate" />

        <MudTimePicker Label="Appointment Start Time"
                       Time="Appointment.Start.TimeOfDay"
                       TimeChanged="UpdateStartTime"
                       AmPm="true" />

        <MudTimePicker Label="Appointment End Time"
                       Time="Appointment.End.TimeOfDay"
                       TimeChanged="UpdateEndTime"
                       AmPm="true" 
                       Disabled="@(!EndTimeEditable)"/>

        @ChildContent
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@ConfirmAppointment"
                   Color="Color.Primary"
                   Class="my-2"
                   FullWidth="true">

            <MudText Typo="Typo.h5">
                Confirm
            </MudText>
        </MudButton>
    </DialogActions>
</MudDialog>